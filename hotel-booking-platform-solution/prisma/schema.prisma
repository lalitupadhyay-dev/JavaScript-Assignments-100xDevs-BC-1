generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  customer
  owner
}

model User {
  id         String   @id @default(uuid())
  name       String
  email      String   @unique
  password   String
  role       Role     @default(customer)
  phone      String @default("")
  created_at DateTime @default(now())
  Hotel      Hotel[]  @relation("OwnerHotel")
}

model Hotel {
  id            String   @id @default(uuid())
  owner_id      String
  owner         User     @relation("OwnerHotel", fields: [owner_id], references: [id])
  name          String
  description   String  @default("")
  city          String
  country       String
  amenities     Json     @default("[]")
  rating        Float    @default(0.0)
  total_reviews Int      @default(0)
  created_at    DateTime @default(now())
}
